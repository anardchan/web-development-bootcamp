<%- include("../partials/header.ejs") %>
    <div id="page-header">
      <h1>Blog Host</h1>
      <a href="/"><button>Back to Home</button></a>
    </div>

    <hr>

    <h2>Edit Post</h2>
    <form action="/blogs/<%= id %>" method="post">
      <div class="blog-input-page">
        <label class="blog-title-label">Title:</label>
        <input class="blog-title" type="text" name="blogTitle" value="<%= blog.title %>" required/>
        <label class="blog-content-label">Content:</label>
        <textarea class="blog-content" name="blogContent" rows="8" required><%= blog.content %></textarea>
      </div>
      <a href="/"><button type="button">Cancel</button></a>
      <button class="green-hover" type="button" data-method="PUT">Save Changes</button>
    </form>
    <%- include("../partials/footer.ejs") %>
  </div>
    <script src="/js/blogCardActions.js"></script>
  </body>
</html>
